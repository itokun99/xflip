{
  "compilerOptions": {
    "jsx": "react",
    "baseUrl": ".",
    "noEmit": true,
    "isolatedModules": true,
    "strict": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "target": "ESNext",
    "lib": ["DOM", "ESNext", "ES2017", "DOM.Iterable"],
    "paths": {
      "@core/*": ["./src/core/*"],
      "@features/*": ["./src/features/*"]
    }
  },
  "extends": "@react-native/typescript-config/tsconfig.json"
}
